{
  "info": {
    "_postman_id": "a2f6d9b6-0000-4c3b-9f2a-abcdef123456",
    "name": "Tracking Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection with basic requests for the tracking-service (GET /api/tracking/:orderId)."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get Tracking Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tracking/{{orderId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tracking",
            "{{orderId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an expected status or NOT_FOUND', function () {",
              "    var valid = ['NOT_FOUND','STARTED','PROCESSING','SHIPPED','DELIVERED'];",
              "    var text = pm.response.text().replace(/\\\"/g, '').trim();",
              "    pm.expect(valid).to.include(text);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get Tracking Status - Example (id=1)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/api/tracking/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8081",
          "path": [
            "api",
            "tracking",
            "1"
          ]
        }
      },
      "response": []
    }
  ]
}

